<!-- res/layout/popup_custom_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:elevation="@dimen/_1sdp"
    android:padding="8dp">

<!--     Custom items for the popup window -->


    <TextView
        android:id="@+id/allItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/_01_image"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/_65sdp"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="@dimen/_11ssp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableEndCompat="@drawable/pro_svg"
        android:drawableTint="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/newItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/_02_images"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="@dimen/_11ssp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="@+id/allItem"
        app:layout_constraintStart_toStartOf="@+id/allItem"
        app:layout_constraintTop_toBottomOf="@+id/allItem"
        />

    <TextView
        android:id="@+id/popularItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/_03_images"
        android:layout_marginTop="@dimen/_1sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="@dimen/_11ssp"
        android:background="?android:attr/selectableItemBackground"
        app:drawableEndCompat="@drawable/pro_svg"
        app:layout_constraintEnd_toEndOf="@+id/allItem"
        app:layout_constraintStart_toStartOf="@+id/allItem"
        app:layout_constraintTop_toBottomOf="@+id/newItem" />

    <TextView
        android:id="@+id/followingItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="04 images"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_1sdp"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="@dimen/_11ssp"
        android:background="?android:attr/selectableItemBackground"
        app:drawableEndCompat="@drawable/pro_svg"
        app:layout_constraintEnd_toEndOf="@+id/popularItem"
        app:layout_constraintStart_toStartOf="@+id/popularItem"
        app:layout_constraintTop_toBottomOf="@+id/popularItem" />


</androidx.constraintlayout.widget.ConstraintLayout>
