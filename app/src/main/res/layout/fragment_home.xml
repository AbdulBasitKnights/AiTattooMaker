<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">

    <TextView
        android:id="@+id/text_tattoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingVertical="12dp"
        android:text="@string/ai_tattoo"
        android:paddingHorizontal="10dp"
        android:textColor="@color/purple_200"
        android:background="@drawable/bg_loader_round"
        app:drawableStartCompat="@drawable/ai_create"
        app:drawableTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ai_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:paddingVertical="12dp"
        android:textAlignment="center"
        android:paddingHorizontal="10dp"
        android:textSize="20sp"
        android:text="@string/ai_camera"
        android:background="@drawable/bg_loader_round"
        app:drawableStartCompat="@drawable/ai_tools_svg"
        android:textColor="@color/purple_200"
        app:drawableTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tattoo" />
</androidx.constraintlayout.widget.ConstraintLayout>