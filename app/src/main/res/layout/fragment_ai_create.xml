<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <!-- Prompt Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/promptCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_loader_round"
            android:backgroundTint="@color/darkGrey"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/titlePrompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="@string/enter_prompt"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/type_your_tattoo"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey"
                        android:maxLines="4"
                        android:minLines="2"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/btnSurpriseMe"
                    android:background="@drawable/bg_loader_round"
                    android:backgroundTint="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/surprise_me"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/ai_create"
                    app:drawableTint="@color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Styles Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stylesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_loader_round"
            android:backgroundTint="@color/darkGrey"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/promptCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/titleStyles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/select_style"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStyles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_tattoo"
                    android:overScrollMode="never"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Create Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/create"
            android:enabled="false"
            android:background="@drawable/bg_loader_round"
            android:backgroundTint="@color/darkGrey"
            app:layout_constraintTop_toBottomOf="@id/stylesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:elevation="2dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
