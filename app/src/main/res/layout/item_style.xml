<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="97dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="2dp">

    <ImageView
        android:id="@+id/ivTattoo"
        android:layout_width="93dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_top_round"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/tattoo" />

    <TextView
        android:id="@+id/tvTattooName"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/bg_bottom_round"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="@id/ivTattoo"
        app:layout_constraintStart_toStartOf="@id/ivTattoo"
        app:layout_constraintTop_toBottomOf="@id/ivTattoo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Tattoo" />

</androidx.constraintlayout.widget.ConstraintLayout>