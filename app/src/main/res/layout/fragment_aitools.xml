<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for background + overlay -->
    <FrameLayout
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintHeight_percent="0.78"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Background photo -->
        <!--        <ImageView-->
        <!--            android:id="@+id/backgroundImage"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:visibility="invisible"-->
        <!--            android:src="@drawable/boy1"-->
        <!--            android:adjustViewBounds="true"/>-->

        <!-- MaskedStickerView on top of background -->
        <com.basit.aitattoomaker.presentation.camera.overlay.MaskedStickerView
            android:id="@+id/maskedStickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:filterTouchesWhenObscured="true"
            android:focusableInTouchMode="true"
            android:layerType="software" />
        <com.basit.library.stickerview.StickerLayout
            android:id="@+id/sl_sticker_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.basit.aitattoomaker.presentation.camera.overlay.MaskedStickerView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:filterTouchesWhenObscured="true"
            android:focusableInTouchMode="true"
            android:layerType="software"
            android:scaleType="centerCrop"
            android:visibility="visible" />
    </FrameLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/photoContainer">

        <TextView
            android:id="@+id/btnLoadDefault"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/load_default"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btnPickSticker"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="@string/pick_sticker"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/btnAlpha"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="@string/opacity"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btnSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
