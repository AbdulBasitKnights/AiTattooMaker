<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Container for background + overlay -->
    <FrameLayout
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.84"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Background photo -->
        <!--        <ImageView-->
        <!--            android:id="@+id/backgroundImage"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:visibility="invisible"-->
        <!--            android:src="@drawable/boy1"-->
        <!--            android:adjustViewBounds="true"/>-->

        <!-- MaskedStickerView on top of background -->
        <com.basit.aitattoomaker.presentation.camera.overlay.MaskedStickerView
            android:id="@+id/maskedStickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:filterTouchesWhenObscured="true"
            android:focusableInTouchMode="true"
            android:layerType="software" />
        <com.basit.library.stickerview.StickerLayout
            android:id="@+id/sl_sticker_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.basit.aitattoomaker.presentation.camera.overlay.MaskedStickerView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:filterTouchesWhenObscured="true"
            android:focusableInTouchMode="true"
            android:layerType="software"
            android:scaleType="centerCrop"
            android:visibility="visible" />
    </FrameLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/photoContainer">

        <TextView
            android:id="@+id/btnLoadDefault"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/load_default"
            android:textAllCaps="false"
            android:background="@drawable/bg_loader_round"
            android:textColor="@color/purple_200" />

        <TextView
            android:id="@+id/btnPickSticker"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="@string/pick_sticker"
            android:textAllCaps="false"
            android:background="@drawable/bg_loader_round"
            android:textColor="@color/purple_200" />
        <TextView
            android:id="@+id/btnAlpha"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="@string/opacity"
            android:textAllCaps="false"
            android:background="@drawable/bg_loader_round"
            android:textColor="@color/purple_200" />

        <TextView
            android:id="@+id/btnSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/save"
            android:textAllCaps="false"
            android:background="@drawable/bg_loader_round"
            android:textColor="@color/purple_200" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/opacity_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom">
        <TextView
            android:id="@+id/opacity255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 %"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/purple_200"
            android:background="@drawable/bg_loader_round"/>
        <TextView
            android:id="@+id/opacity192"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25%"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/purple_200"
            android:background="@drawable/bg_loader_round"/>
        <TextView
            android:id="@+id/opacity128"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/purple_200"
            android:background="@drawable/bg_loader_round"/>
        <TextView
            android:id="@+id/opacity64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/purple_200"
            android:background="@drawable/bg_loader_round"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/changePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_revert"
        android:background="@drawable/bg_loader_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tattoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_tattoo"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        tools:itemCount="4"/>

</androidx.constraintlayout.widget.ConstraintLayout>
