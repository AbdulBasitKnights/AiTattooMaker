<!-- res/layout/popup_custom_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:backgroundTint="@color/grey"
    android:paddingVertical="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:elevation="@dimen/_1sdp">

<!--     Custom items for the popup window -->


    <TextView
        android:id="@+id/square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text="@string/_1_1"
        android:textColor="@color/lightGrey"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="@dimen/_11ssp"
        android:clickable="true"
        android:gravity="start"
        android:focusable="true"
        app:drawableStartCompat="@drawable/square_svg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:text="@string/_4_5"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:textColor="@color/lightGrey"
        android:fontFamily="@font/poppins_regular_400"
        android:drawablePadding="@dimen/_10sdp"
        android:textSize="@dimen/_11ssp"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/portrait_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/square"
        />

    <TextView
        android:id="@+id/landscape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="@string/_4_3"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/lightGrey"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="@dimen/_11ssp"
        app:drawableStartCompat="@drawable/landscape_svg"
        app:layout_constraintEnd_toEndOf="@+id/square"
        app:layout_constraintStart_toStartOf="@+id/square"
        app:layout_constraintTop_toBottomOf="@+id/portrait" />



</androidx.constraintlayout.widget.ConstraintLayout>
