<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:visibility="invisible">

    <!-- Container for background + overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintBottom_toTopOf="@+id/bottom">
        <!-- MaskedStickerView on top of background -->
        <com.basit.library.stickerview.MaskedStickerView
            android:id="@+id/maskedStickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:filterTouchesWhenObscured="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:focusableInTouchMode="true"
            android:layerType="software" />

        <com.basit.library.stickerview.StickerLayout
            android:id="@+id/sl_sticker_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@+id/maskedStickerView"
            app:layout_constraintBottom_toBottomOf="@+id/maskedStickerView"/>

        <com.basit.aitattoomaker.presentation.camera.overlay.MaskedStickerView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:filterTouchesWhenObscured="true"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:layerType="software"
            android:visibility="visible" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instructionOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinch to zoom"
                android:background="@drawable/bg_round_black_trans"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/drag"
                android:paddingHorizontal="@dimen/_7sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                app:drawableEndCompat="@drawable/expand_svg" />

            <TextView
                android:id="@+id/drag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag to move"
                android:background="@drawable/bg_round_black_trans"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/zoom"
                app:layout_constraintBottom_toTopOf="@+id/rotate"
                android:paddingHorizontal="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                app:drawableEndCompat="@drawable/pinch_svg"/>

            <TextView
                android:id="@+id/rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate with two fingers"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_round_black_trans"
                android:paddingHorizontal="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingVertical="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableEndCompat="@drawable/rotate_svg"
                android:textSize="11sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_black_trans"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/gallery_svg"
        app:layout_constraintBottom_toBottomOf="@+id/photoContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"/>
    <ImageView
        android:id="@+id/autoZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_black_trans"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/expand_svg"
        app:layout_constraintBottom_toTopOf="@+id/gallery"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"/>
    <!-- Bottom controls -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/tabGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/rv_tattoo">

            <TextView
                android:id="@+id/tabLibrary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawablePadding="@dimen/_2sdp"
                android:text="@string/library_tattoos"
                android:textColor="@color/colorprimary"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium_500"
                app:drawableTopCompat="@drawable/library_svg" />

            <TextView
                android:id="@+id/tabHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/history_tattoos"
                android:textColor="@color/disable"
                android:textSize="13sp"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/poppins_medium_500"
                app:drawableTopCompat="@drawable/history_svg" />
        </LinearLayout>

        <!-- Tattoo RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tattoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginStart="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:itemCount="4"
            android:layout_marginBottom="@dimen/_5sdp"
            tools:listitem="@layout/item_tattoo_square" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opacity_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        android:background="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/cancel_opacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/opacity_cross"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/done_opacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tick_svg"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/opacity_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:progress="40"
            android:progressTint="@color/colorprimary"
            android:thumbTint="@color/colorprimary"
            app:layout_constraintStart_toStartOf="@+id/cancel_opacity"
            app:layout_constraintEnd_toEndOf="@+id/done_opacity"
            app:layout_constraintTop_toBottomOf="@+id/cancel_opacity"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"/>
        <TextView
            android:id="@+id/seekbar_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium_500"
            app:layout_constraintStart_toEndOf="@+id/opacity_seekbar"
            app:layout_constraintTop_toTopOf="@+id/opacity_seekbar"
            app:layout_constraintBottom_toBottomOf="@+id/opacity_seekbar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/removeSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_7sdp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:visibility="invisible"
            android:src="@drawable/delete_svg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_7sdp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/colorprimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:visibility="visible"
            android:src="@drawable/cross_svg"
            android:layout_marginStart="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
