<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="95dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp">

    <ImageView
        android:id="@+id/ivTattoo"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/dragon" />

    <TextView
        android:id="@+id/tvTattooName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/bg_bottom_round"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="@id/ivTattoo"
        app:layout_constraintStart_toStartOf="@id/ivTattoo"
        app:layout_constraintTop_toBottomOf="@id/ivTattoo"
        tools:text="Tattoo" />

</androidx.constraintlayout.widget.ConstraintLayout>