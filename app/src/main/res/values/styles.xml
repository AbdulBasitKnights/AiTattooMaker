<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ThemeOverlay.App.RoundedTopSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!-- Rounded ONLY on top -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.App.TopRounded
        </item>

        <!-- Optional: remove default dim or tweak if you want -->
        <!-- <item name="android:windowIsTranslucent">true</item> -->
    </style>

    <style name="ShapeAppearance.App.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="ResultRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="TopRoundedImageStyle" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TopRoundedOnly</item>
    </style>

    <style name="ShapeAppearance.TopRoundedOnly" parent="">
        <!-- Top corners rounded -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeTopRight">9dp</item>

        <!-- Bottom corners square -->
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>