<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingHorizontal="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/brand_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
                android:background="@drawable/pro_svg_home"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Prompt Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/promptCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:elevation="2dp"
            android:minHeight="180dp"
            android:background="@drawable/bg_loader_round"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titlePrompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enter_prompt"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/titlePrompt"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">   <!-- ðŸš€ disables floating label -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="top|start"
                        android:overScrollMode="always"
                        android:paddingStart="@dimen/_1sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:hint="@string/type_your_tattoo"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="5"
                        android:minLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/greyText" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/btnSurpriseMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="@color/grey"
                    android:drawablePadding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="@string/surprise_me"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/surprise"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <TextView
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="@color/grey"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:visibility="gone"
                    android:text="@string/clear"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@+id/btnSurpriseMe"
                    app:layout_constraintBottom_toBottomOf="@+id/btnSurpriseMe"
                    app:layout_constraintEnd_toStartOf="@+id/btnSurpriseMe" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Styles Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stylesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/promptCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="3dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleStyles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/select_style"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/seeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textColor="@color/lightGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStyles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_tattoo" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/btnVariations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/grey"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="14dp"
            android:text="@string/_02_images"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/arrow_down"
            android:layout_marginHorizontal="5dp"
            app:drawableStartCompat="@drawable/variation"
            app:drawableTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/stylesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCanvas"/>
        <TextView
            android:id="@+id/btnCanvas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/grey"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingVertical="14dp"
            android:paddingHorizontal="10dp"
            android:text="@string/_4_5"
            android:textColor="@color/white"
            android:layout_marginHorizontal="5dp"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/arrow_down"
            app:drawableStartCompat="@drawable/canvas_portrait"
            app:drawableTint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btnVariations"
            app:layout_constraintTop_toTopOf="@+id/btnVariations"
            app:layout_constraintBottom_toBottomOf="@+id/btnVariations"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Create Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_create_background"
            android:elevation="2dp"
            android:enabled="false"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            app:useMaterialThemeColors="false"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVariations" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
